FROM golang:1.18

ENV GO111MODULE=on \
    CGO_ENABLED=0 \
    GOOS=linux \
    GOARCH=amd64

RUN apt-get update && \
    apt-get install -y wget build-essential pkg-config git --no-install-recommends

WORKDIR /build

COPY . .

RUN go mod download

RUN go install github.com/githubnemo/CompileDaemon@latest

# CompileDaemon gets installed here
ENV PATH="${PATH}:/go/bin/linux_amd64"
