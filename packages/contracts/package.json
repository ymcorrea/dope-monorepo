{
  "name": "@dopewars/contracts",
  "private": true,
  "author": "Tarrence van As",
  "license": "GPL-3.0-or-later",
  "version": "1.0.0",
  "description": "Split your lootbags in their individual pieces",
  "files": [
    "*.sol",
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@typechain/ethers-v6": "^0.5.1",
    "copyfiles": "^2.4.1",
    "ethers": "^6.10.0",
    "next": "^11.1.4",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.3.1",
    "rimraf": "^3.0.2",
    "typechain": "^8.3.2",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "lint": "prettier --write src/**/*.sol",
    "typechain": "typechain --target ethers-v6 --out-dir types 'abis/*.abi'",
    "build": "yarn typechain && tsc && copyfiles -u 1 \"types/**/*.d.ts\" dist"
  }
}
